<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.cards.kifio.swipeablecards.CardsView
            android:id="@+id/cardsView0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:marginHorizontalStep="4dp"
            app:marginVerticalStep="16dp"
            app:order="natural"
            app:infinite="true"
            app:visibleViewsCount="4" />

        <com.cards.kifio.swipeablecards.CardsView
            android:id="@+id/cardsView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:marginHorizontalStep="8dp"
            app:order="natural"
            app:visibleViewsCount="5" />

        <com.cards.kifio.swipeablecards.CardsView
            android:id="@+id/cardsView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:marginHorizontalStep="0dp"
            app:order="natural"
            app:visibleViewsCount="3" />

        <com.cards.kifio.swipeablecards.CardsView
            android:id="@+id/cardsView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:marginHorizontalStep="16dp"
            app:order="natural"
            app:visibleViewsCount="22" />



    </LinearLayout>

</ScrollView>
